{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "ts-built",
        "resolveJsonModule": true,

        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        
        "strict": true,
        "rootDir": "src",
        "esModuleInterop": true,

        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src",
        "types"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
    ]
}